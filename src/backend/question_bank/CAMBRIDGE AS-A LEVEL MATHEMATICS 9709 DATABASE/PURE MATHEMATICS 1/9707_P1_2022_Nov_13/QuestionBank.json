        ]
    },
    "QuestionContent": {
        "Text": "Solve the equation \\(8 \\sin^2 \\theta + 6 \\cos \\theta + 1 = 0\\) for \\(0^\\circ < \\theta < 180^\\circ\\)."
    },
    "SolutionContent": {
        "Parts": [
            {
                "Solution": [
                    "Substitute \\(\\sin^2 \\theta = 1 - \\cos^2 \\theta\\):",
                    "\\(8(1 - \\cos^2 \\theta) + 6 \\cos \\theta + 1 = 0\\).",
                    "Simplify to: \\(8 \\cos^2 \\theta - 6 \\cos \\theta - 9 = 0\\).",
                    "Factorize: \\((4 \\cos \\theta + 3)(2 \\cos \\theta - 3) = 0\\).",
                    "Solve for \\(\\cos \\theta\\):",
                    "\\(\\cos \\theta = -\\frac{3}{4}\\) or \\(\\cos \\theta = \\frac{3}{2}\\).",
                    "\\(\\cos \\theta = \\frac{3}{2}\\) is not valid as \\(|\\cos \\theta| \\leq 1\\).",
                    "Solve \\(\\cos \\theta = -\\frac{3}{4}\\):",
                    "\\(\\theta = 180^\\circ - \\arccos(\\frac{3}{4})\\).",
                    "Final answer: \\(\\theta = 138.6^\\circ\\)."
                ],
                "MarkingScheme": {
                    "M1": "Correct substitution and simplification to quadratic form.",
                    "A1": "Correct factorization or use of quadratic formula.",
                    "A1": "Correct solution \\(\\theta = 138.6^\\circ\\) in the given range."
                }
            }
        ],
        "FinalAnswer": {
            "Theta": "\\(\\theta = 138.6^\\circ\\)"
        }
    }
},
