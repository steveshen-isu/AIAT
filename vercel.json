{
    "version": 2,
    "builds": [
      {
        "src": "package.json", 
        "use": "@vercel/node"
      },
      {
        "src": "src/backend/server.js", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "src/backend/server.js"
      },
      {
        "src": "/(.*)", 
        "dest": "/src/frontend/$1"
      }
    ]
  }
  